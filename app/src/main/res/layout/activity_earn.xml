<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Earn">

    <Button
        android:id="@+id/button7"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </include>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="108dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        app:srcCompat="@drawable/azaz12" />



    <Button
        android:id="@+id/button4"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/roundbutton7"
        android:fontFamily="serif"
        android:text="Install"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button5"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/roundbutton7"
        android:fontFamily="serif"
        android:text="Next"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="85dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Total Earn:"
        android:textColor="#2dbc65"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="113dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:text="Total Installs:"
        android:textColor="#5bdae1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="370dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="com.asus.azazul.appinstall"
        android:textAlignment="center"
        android:textColor="#9ac614"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="101dp"
        android:layout_height="35dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="12dp"
        android:paddingTop="1dp"
        android:text="45$"
        android:textColor="#75a123"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:layout_marginStart="116dp"
        android:paddingTop="2dp"
        android:text="123"
        android:textColor="#75a123"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="365dp"
        android:layout_height="65dp"
        android:layout_marginStart="40dp"
        android:text="You can earn 1$ installing and playing per game or app"
        android:textColor="#c89e05"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="365dp"
        android:layout_height="64dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="126dp"
        android:text="You will lost 0.5$ for unstalling per app or game"
        android:textColor="#709809"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button6"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="387dp"
        android:layout_height="55dp"
        android:layout_marginTop="556dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1514455590914166/2113735367"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent">

    </com.google.android.gms.ads.AdView>


</android.support.constraint.ConstraintLayout>