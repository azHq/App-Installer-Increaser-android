<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".My_Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background1"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="196dp"
            android:layout_height="136dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/azaz12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <TextView
            android:id="@+id/username"
            android:layout_width="296dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="31dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:text="Azazul Haque Azaz"
            android:textAlignment="center"
            android:textColor="#b4e512"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/roundbutton5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="158dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:fontFamily="serif"
            android:paddingTop="4dp"
            android:text="Earn"
            android:textAlignment="center"
            android:textColor="#2340e7"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/earn"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="12$"
            android:textAlignment="center"
            android:textColor="#2340e7"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="188dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/roundbutton5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="158dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:fontFamily="serif"
            android:paddingTop="4dp"
            android:text="Install"
            android:textAlignment="center"
            android:textColor="#2340e7"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/install"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="123"
            android:textAlignment="center"
            android:textColor="#2340e7"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="326dp"
        android:background="@drawable/roundbutton5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="158dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:fontFamily="serif"
            android:paddingTop="4dp"
            android:text="Uninstall"
            android:textAlignment="center"
            android:textColor="#2340e7"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uninstall"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="28"
            android:textAlignment="center"
            android:textColor="#2340e7"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="188dp"
        android:layout_marginTop="326dp"
        android:background="@drawable/roundbutton5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="158dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:fontFamily="serif"
            android:paddingTop="4dp"
            android:text="Clicks"
            android:textAlignment="center"
            android:textColor="#2340e7"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/clicks"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="serif"
            android:text="56"
            android:textAlignment="center"
            android:textColor="#2340e7"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/roundbutton5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="158dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:fontFamily="serif"
            android:paddingTop="4dp"
            android:text="Country"
            android:textAlignment="center"
            android:textColor="#2340e7"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/country"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Bangladesh"
            android:textAlignment="center"
            android:textColor="#2340e7"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4543818442626948/2741646083"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent">

    </com.google.android.gms.ads.AdView>









</RelativeLayout>